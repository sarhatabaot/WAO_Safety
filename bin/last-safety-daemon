#!/bin/bash

PROG=$(basename "${0}")

function usage() {
    echo "Usage:"
    echo "  ${PROG} start|stop|status"
}

if [ ${#} -ne 1 ]; then
    usage
    exit 1
fi

case ${1} in
    start)
      cd ~/python/WAO_Safety || exit
      source venv/bin/activate
      python3 "${OPTIONS}" ~/python/WAO_Safety/main.py >/dev/null 2>&1
      ;;

    stop)
      pkill -9 -f WAO_Safety/main.py
      ;;

    status)
      ;;

    *)
      usage
      exit 1
esac
